<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/common_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/activity_setting_ip_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:layout_weight="1"
            android:background="@drawable/edit_bg_coner_transfer"
            android:hint="请输入ip"
            android:maxLength="20"
            android:padding="10dp"
            android:textColor="#ff333333"
            android:textColorHint="#dddddd"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/activity_setting_mobile_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:layout_weight="1"
            android:background="@drawable/edit_bg_coner_transfer"
            android:hint="请输入账号"
            android:maxLength="20"
            android:padding="10dp"
            android:textColor="#ff333333"
            android:textColorHint="#dddddd"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/activity_setting_name_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:layout_weight="1"
            android:background="@drawable/edit_bg_coner_transfer"
            android:hint="请输入昵称"
            android:maxLength="20"
            android:padding="10dp"
            android:textColor="#ff333333"
            android:textColorHint="#dddddd"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/activity_setting_password_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:layout_weight="1"
            android:background="@drawable/edit_bg_coner_transfer"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="6"
            android:padding="10dp"
            android:textColor="#ff333333"
            android:textColorHint="#dddddd"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/activity_setting_password2_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:layout_weight="1"
            android:background="@drawable/edit_bg_coner_transfer"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:maxLength="6"
            android:padding="10dp"
            android:textColor="#ff333333"
            android:textColorHint="#dddddd"
            android:textSize="16sp" />

        <Button
            android:id="@+id/activity_setting_submit_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_voice"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/common_tv_corner"
            android:gravity="center"
            android:text="确认操作"
            android:textColor="#ffffff" />

    </LinearLayout>
</LinearLayout>