<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_my_head_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/food_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_my_head_bg_iv"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/my_setting_username_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_setting_userflag_tv"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="当前用户"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_setting_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#ff666666"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="#ffebebeb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_setting_ip_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="当前ip地址"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_setting_ip_tv"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="127.0.0.1"
                android:textColor="#ff666666"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corelib_common_enter" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="#ffebebeb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_setting_banner_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="设置轮播图"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_setting_banner_tv"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="127.0.0.1"
                android:textColor="#ff666666"
                android:textSize="16sp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corelib_common_enter" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="#ffebebeb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_setting_good_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="添加商品"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_setting_good_tv"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="127.0.0.1"
                android:textColor="#ff666666"
                android:textSize="16sp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corelib_common_enter" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="#ffebebeb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_setting_version_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="版本信息"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_setting_version_tv"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="v1.0"
                android:textColor="#ff666666"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="#ffebebeb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_setting_phone_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="联系商家"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_setting_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="18084725150"
                android:textColor="#ff666666"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/call_phone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="#ffebebeb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_setting_address_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="收货地址"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_setting_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="点击设置收货地址"
                android:textColor="#ff666666"
                android:textSize="14sp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corelib_common_enter" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="#ffebebeb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_setting_shop_address_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="餐厅地址"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_setting_shop_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="点击设置收货地址"
                android:textColor="#ff666666"
                android:textSize="14sp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corelib_common_enter" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="#ffebebeb" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/my_setting_logout_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="#ffd7101e"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>